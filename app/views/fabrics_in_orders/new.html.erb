<!-- Validation failure messages -->
<% if @fabrics_in_order.errors.any? %>
  <% @fabrics_in_order.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Fabrics In Order</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_fabrics_in_order" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for order_id -->
      <div class="form-group">
        <label for="order_id" class="control-label">
          Order
        </label>

        <input type="text" id="order_id" name="order_id" placeholder="Order" class="form-control" value="<%= @fabrics_in_order.order_id %>">
      </div>

      <!-- Label and input for fabric_id -->
      <div class="form-group">
        <label for="fabric_id" class="control-label">
          Fabric
        </label>

        <input type="text" id="fabric_id" name="fabric_id" placeholder="Fabric" class="form-control" value="<%= @fabrics_in_order.fabric_id %>">
      </div>

      <button class="btn btn-success">
        Create Fabrics In Order
      </button>
      or
      <a href="/fabrics_in_orders">Cancel</a>
    </form>
  </div>
</div>
